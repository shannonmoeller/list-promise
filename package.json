{
  "name": "list-promise",
  "version": "2.0.0",
  "description": "Maximally-concurrent Promise-aware array iteration.",
  "license": "MIT",
  "repository": "shannonmoeller/list-promise",
  "keywords": [],
  "homepage": "https://github.com/shannonmoeller/list-promise",
  "author": {
    "name": "Shannon Moeller",
    "email": "me@shannonmoeller.com",
    "url": "http://shannonmoeller.com"
  },
  "main": "dist/list-promise.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "babel-runtime": "^6.6.1"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.6",
    "nyc": "^6.0.0",
    "rimraf": "^2.5.2",
    "xo": "^0.13.0"
  },
  "scripts": {
    "coveralls": "nyc report -r text-lcov | coveralls",
    "build": "rimraf dist && babel src --out-dir dist",
    "prepublish": "npm test && npm run build",
    "pretest": "xo {src,test}/**/*.js",
    "test": "nyc ava -v",
    "posttest": "nyc report -r lcov",
    "watch": "chokidar '{src,test}/**/*.js' -c 'npm test'"
  },
  "engines": {
    "node": ">= 0.12"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime"
    ]
  },
  "nyc": {
    "require": [
      "babel-polyfill",
      "babel-register"
    ]
  },
  "xo": {
    "rules": {
      "brace-style": [
        2,
        "stroustrup"
      ],
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "no-eq-null": 0,
      "object-curly-spacing": [
        2,
        "always"
      ],
      "operator-linebreak": [
        2,
        "before"
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
